<table class="table table-hover" border="1" style="width:48%">
    <thead bgcolor="#222" style="color:white">
        <th>Storage Request</th>
    </thead>

    @foreach (ToTheMoon.Models.Request request in ViewBag.Requests)
    {
        <tbody>
            <td>
               @* <p>Requested by: @request.Requester.FirstName</p>*@
                <p>@request.HumanReadableRequestString</p>
                @Html.ActionLink("[Approve]", "../Request/Approve/" + request.RequestID )
                @Html.ActionLink("[Reject]", "../Request/Reject/" + request.RequestID )
                @Html.ActionLink("[Comment]", "../Request/Comment/" + request.RequestID)
            </td>
        </tbody>
    }
</table>