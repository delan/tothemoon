@model ToTheMoon.Models.IncreaseSpaceRequest

@{
    ViewBag.Title = "Create";
}

<h2><b>Create</b> Increase Space Request</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SpaceID)

        <div class="form-group">
            @Html.LabelFor(model => model.space.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.space.Name)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.brief, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.brief, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.ValidationMessageFor(model => model.brief)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.increase, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.increase, new { @class = "form-control" })
                    <span class="input-group-addon">GB</span>
                </div>
            </div>
            <div class="col-md-6">
                @Html.ValidationMessageFor(model => model.increase)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Dashboard", "../Dashboard")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
